<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_mode">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:justificationMode="inter_word"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="vertical"
            android:textColor="#111111"
            android:textSize="20dp"
            android:visibility="visible"
            android:id="@+id/content"/>
        <ru.tacticm.CircleView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_arrow_back_24px"
            android:id="@+id/back"/>
        <ru.tacticm.CircleView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_share_24px"
            android:id="@+id/share"/>
        <ru.tacticm.CircleView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_bookmark_outline_24px"
            android:id="@+id/bookmark"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/pic_mode">
        <!--com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/pic"/>
<ru.tacticm.CircleView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:src="@drawable/ic_clear_24px"
    android:id="@+id/clear"/>
<ru.tacticm.CircleView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:src="@drawable/ic_chevron_left_24px"
    android:id="@+id/left"/>
<ru.tacticm.CircleView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_chevron_right_24px"
    android:id="@+id/right"/>
<TextView
    android:text="foto 22"
    android:textColor="#111111"
    android:background="#60ffffff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_margin="20dp"
    android:textSize="40dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/name"/>
</RelativeLayout>
</RelativeLayout>
